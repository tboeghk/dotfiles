Host torstopi
    User torsten

Host *.eu-central-1.compute.amazonaws.com
    User centos
    IdentityFile ~/.ssh/aws-o12stack.pem

Host *.k8s.o12stack.org
    User root
    IdentityFile ~/.ssh/hetzner-o12stack.pem

Host *
    ForwardAgent  yes
    UseKeychain yes
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_rsa
    XAuthLocation /usr/X11/bin/xauth 
